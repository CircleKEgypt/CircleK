    <script>
        $(document).ready(function () {
            var timerInterval; // Variable to hold the interval ID for the stopwatch
            var totalSeconds = 0; // Total elapsed seconds

            function startStopwatch() {
                // Reset the total seconds
                totalSeconds = 0;

                // Start the stopwatch
                timerInterval = setInterval(function () {
                    totalSeconds++;
                    var hours = Math.floor(totalSeconds / 3600);
                    var minutes = Math.floor((totalSeconds - (hours * 3600)) / 60);
                    var seconds = totalSeconds - (hours * 3600) - (minutes * 60);

                    // Pad the time values with leading zeros
                    hours = String(hours).padStart(2, '0');
                    minutes = String(minutes).padStart(2, '0');
                    seconds = String(seconds).padStart(2, '0');

                    // Display the formatted time
                    $('#stopwatchDisplay').text(hours + ':' + minutes + ':' + seconds);
                }, 1000);
            }

            function stopStopwatch() {
                // Stop the stopwatch
                clearInterval(timerInterval);
            }

            $('#combinedForm').on('submit', function (event) {
                event.preventDefault(); // Prevent the default form submission

                // Disable the export button to prevent multiple exports
                $('#exportButton').prop('disabled', true);

                // Start the stopwatch
                startStopwatch();

                var formData = $(this).serialize(); // Serialize the form data

                $.ajax({
                    url: '/Home/Index'
                    // url: $(this).attr('action'), // Get the action URL from the form
                    type: 'POST',
                    data: formData,
                    xhrFields: {
                        responseType: 'blob' // Indicate that the response is a Blob
                    },
                    success: function (response) {
                        // Create a blob from the response
                        var blob = new Blob([response], { type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' });

                        // Create a link to download the blob as a file
                        var link = document.createElement('a');
                        link.href = window.URL.createObjectURL(blob);
                        link.download = 'SalesReport.xlsx';

                        // Append the link to the body
                        document.body.appendChild(link);

                        // Simulate a click on the link to download the file
                        link.click();

                        // Remove the link from the body
                        document.body.removeChild(link);

                        // Alert the user that the export is complete
                        alert('The report has been successfully exported!');

                        // Stop the stopwatch
                        stopStopwatch();

                        // Enable the export button again
                        $('#exportButton').prop('disabled', false);
                    },
                    error: function () {
                        // Handle errors
                        alert('An error occurred while trying to export the report.');

                        // Stop the stopwatch
                        stopStopwatch();

                        // Enable the export button again
                        $('#exportButton').prop('disabled', false);
                    }
                });
            });
        });
    </script>
